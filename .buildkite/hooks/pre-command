set -e

if [[ -z ${EMS_ENVIRONMENT} ]]; then
    exit 0
fi

echo '--- :bash: Setting up the environment to deploy assets into dev/staging/prod buckets'

export GPROJECT="elastic-ems-dev"
export EMS_PROJECT=maps-landing-page
export ROOT_BRANCH='v8.6'


case ${EMS_ENVIRONMENT} in
    "development")
    ;;
    "staging")
    GCP_BUCKET="${GPROJECT}-${EMS_PROJECT}-staging"
    ;;
    "production")
    ;;
    "*")
        echo "--- :fire: ${EMS_ENVIRONMENT}  is not a valid environment definition" 1>&2
        exit 1
esac

#TO UPDATE WITH VAULT LOCATION FOR BEKITZUR CREDENTIALS
export GCS_VAULT_SECRET_PATH="secret/ci/elastic-ems-landing-page/testing/gcs_acount" 


